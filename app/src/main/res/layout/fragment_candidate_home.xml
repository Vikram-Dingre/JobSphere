        <!-- CardView Header -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/jobsCard"
            app:cardBackgroundColor="@color/primary"
            app:cardPreventCornerOverlap="true"
            app:shapeAppearanceOverlay="@style/CandidateJobsCardShape"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:weightSum="100">

                    <ImageView
                        app:tint="@color/white"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="20"
                        android:src="@drawable/profile_selected" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:fontFamily="sans-serif-medium"
                        android:text="Vikram Dingre"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ibCandidateHomeNotifications"
                        app:tint="@color/white"
                        android:layout_width="0dp"
                        android:layout_height="22dp"
                        android:layout_weight="20"
                        android:src="@drawable/candidate_notifications" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


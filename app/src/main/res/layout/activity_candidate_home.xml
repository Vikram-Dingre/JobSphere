<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".Candidate.Activities.CandidateHomeActivity">

    <FrameLayout
        android:id="@+id/flCandidateHomeActivityFrameContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="92" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnvCandidateHomeActivityBottomMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@null"
        app:itemTextColor="@null"
        style="@style/NoActiveIndicatorNavigation"
        app:itemRippleColor="@android:color/transparent"
        app:menu="@menu/candidate_home_bottom_menu" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEECEC"
    tools:context=".Recruiter.Activities.RecruiterProfileInfoActivities.RecruiterCompanyDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:paddingVertical="20dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/back_arrow"
            android:background="@drawable/candidate_job_details_skills_shape" />

        <TextView
            android:layout_width="0dp"
            android:width="0dp"
            android:layout_weight="79"
            android:layout_height="wrap_content"
            android:text="Company Details"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#C6000000" />

        <ImageView
            android:id="@+id/ivCandidateJobDetailsSaveJob"
            android:layout_width="0dp"
            android:layout_weight="10.5"
            android:layout_height="match_parent"
            app:tint="@color/black"
            android:background="@drawable/candidate_job_details_skills_shape"
            android:paddingHorizontal="7dp"
            android:paddingVertical="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivRecruiterCompanyDetailsCompanyLogo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle"
            android:backgroundTint="@color/primary"
            android:clipToOutline="true"
            android:scaleType="fitXY" />

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRecruiterCompanyDetailsCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mountreach solution Private limited"
            android:textSize="14sp"
            android:textColor="#5A5959"
            android:background="@drawable/image_shape"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Industry"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRecruiterCompanyDetailsIndustry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IT"
            android:textSize="14sp"
            android:textColor="#5A5959"
            android:background="@drawable/image_shape"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="10dp" />


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvRecruiterCompanyDetailsSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2000 Employees"
            android:textSize="14sp"
            android:textColor="#5A5959"
            android:background="@drawable/image_shape"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRecruiterCompanyDetailsWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="www.mountreachsolutionpvtltd.com"
            android:textSize="14sp"
            android:textColor="#5A5959"
            android:background="@drawable/image_shape"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="10dp" />



    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEECEC"
    tools:context=".Recruiter.Activities.RecruiterProfileInfoActivities.RecruiterProfileUpdateActivities.RecruiterUpdateComapnyLocationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:paddingVertical="20dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/back_arrow"
            android:background="@drawable/candidate_job_details_skills_shape" />

        <TextView
            android:layout_width="0dp"
            android:width="0dp"
            android:layout_weight="79"
            android:layout_height="wrap_content"
            android:text="Company Location"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#C6000000" />

        <ImageView
            android:id="@+id/ivRecruiterUpdateCompanyLocationSave"
            android:layout_width="0dp"
            android:layout_weight="10.5"
            android:layout_height="match_parent"
            app:tint="@color/black"
            android:src="@drawable/save"
            android:background="@drawable/candidate_job_details_skills_shape"
            android:paddingHorizontal="7dp"
            android:paddingVertical="5dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilRecruiterUpdateCompanyLocationCity"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#6200EE"
                android:hint="Georai"
                android:textColorHint="#5A5959"
                android:textSize="14sp"
                android:textColor="#5A5959"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tieRecruiterUpdateCompanyLocationCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilRecruiterUpdateCompanyLocationState"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#6200EE"
                android:hint="Maharastra"
                android:textColorHint="#5A5959"
                android:textSize="14sp"
                android:textColor="#5A5959"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tieRecruiterUpdateCompanyLocationState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilRecruiterUpdateCompanyLocationCountery"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#6200EE"
                android:hint="India"
                android:textColorHint="#5A5959"
                android:textSize="14sp"
                android:textColor="#5A5959"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tieRecruiterUpdateCompanyLocationCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zip Code"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilRecruiterUpdateCompanyLocationZipCode"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#6200EE"
                android:hint="431127"
                android:textColorHint="#5A5959"
                android:textSize="14sp"
                android:textColor="#5A5959"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tieRecruiterUpdateCompanyLocationZipCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company address"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilRecruiterUpdateCompanyLocationCompanyAddress"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#6200EE"
                android:hint="Takadgoan road Sant Nagar , Georai"
                android:textColorHint="#5A5959"
                android:textSize="14sp"
                android:textColor="#5A5959"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tieRecruiterUpdateCompanyLocationCompanyAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About your company"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilRecruiterUpdateCompanyLocationAboutYourCompany"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#6200EE"
                android:hint="I dont know..."
                android:textColorHint="#5A5959"
                android:textSize="14sp"
                android:textColor="#5A5959"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tieRecruiterUpdateCompanyLocationAboutYourCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>

    </ScrollView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Recruiter.Activities.RecruiterCreateNewJobActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:weightSum="100">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@drawable/candidate_job_details_skills_shape"
            android:padding="5dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="79"
            android:width="0dp"
            android:gravity="center_horizontal"
            android:text="Create Job"
            android:textColor="#C6000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivRecruiterCreateNewJobCreate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10.5"
            android:background="@drawable/candidate_job_details_skills_shape"
            android:paddingHorizontal="7dp"
            android:paddingVertical="5dp"
            android:src="@drawable/save"
            app:tint="@color/black" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Company Logo"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivRecruiterCreateNewJobCompanyLogo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/applicant_profile_photo_shape"
                    android:clipToOutline="true"
                    android:src="@drawable/app_logo" />

                <ImageView
                    android:id="@+id/ivRecruiterCreateNewJobSelectCompanyLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="-30dp"
                    android:background="@drawable/edit_icon_bg"
                    android:padding="2dp"
                    android:src="@drawable/edit"
                    app:tint="@color/primary" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Title"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tieRecruiterCreateNewJobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_borders_only_shape"
                android:hint="Enter Job Title"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Description"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tieRecruiterCreateNewJobDescription"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_borders_only_shape"
                android:gravity="top"
                android:hint="Enter Job Description..."
                android:inputType="text"
                android:padding="15dp"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Company Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tieRecruiterCreateNewJobCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_borders_only_shape"
                android:hint="Enter Company Name..."
                android:inputType="text"
                android:padding="15dp"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Company Location"
                android:textSize="16sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/tieRecruiterCreateNewJobCompanyLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_borders_only_shape"
                android:hint="Enter Job Location..."
                android:inputType="text"
                android:padding="15dp"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Job Types"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_borders_only_shape"
                android:padding="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="false"
                app:contentPadding="15dp">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cgRecruiterCreateNewJobJobTypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:chipSpacingHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    app:singleLine="false"
                    app:singleSelection="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/jobTypeFullTime"
                        style="@style/Widget.Material3.Chip.Filter.Elevated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full-Time"
                        android:textColor="@color/black"
                        app:checkedIcon="@drawable/checked"
                        app:checkedIconTint="@color/primary" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/jobTypePartTime"
                        style="@style/Widget.Material3.Chip.Filter.Elevated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Part-Time"
                        android:textColor="@color/black"
                        app:checkedIcon="@drawable/checked"
                        app:checkedIconTint="@color/primary" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/jobTypeOnSite"
                        style="@style/Widget.Material3.Chip.Filter.Elevated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On-Site"
                        android:textColor="@color/black"
                        app:checkedIcon="@drawable/checked"
                        app:checkedIconTint="@color/primary" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/jobTypeInternship"
                        style="@style/Widget.Material3.Chip.Filter.Elevated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Internship"
                        android:textColor="@color/black"
                        app:checkedIcon="@drawable/checked"
                        app:checkedIconTint="@color/primary" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/jobTypeHybrid"
                        style="@style/Widget.Material3.Chip.Filter.Elevated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hybrid"
                        android:textColor="@color/black"
                        app:checkedIcon="@drawable/checked"
                        app:checkedIconTint="@color/primary" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/jobTypeRemote"
                        style="@style/Widget.Material3.Chip.Filter.Elevated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remote"
                        android:textColor="@color/black"
                        app:checkedIcon="@drawable/checked"
                        app:checkedIconTint="@color/primary" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Job Category"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_borders_only_shape"
                android:hint="Select Job Category"
                android:textColorHint="#5A5959"
                app:endIconTint="#5A5959"
                app:expandedHintEnabled="false"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/actRecruiterCreateNewJobJobCategory"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:inputType="none"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Skills List"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_borders_only_shape"
                android:orientation="vertical"
                android:padding="10dp">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cgRecruiterCreateNewJobSkillList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:chipSpacing="8dp"
                    app:singleLine="false"
                    app:singleSelection="false">

                </com.google.android.material.chip.ChipGroup>


                <EditText
                    android:id="@+id/etRecruiterCreateJobAddSkills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/input_borders_only_shape"
                    android:hint="Enter Skill"
                    android:padding="10dp"
                    android:textSize="15sp" />


                <LinearLayout
                    android:id="@+id/llRecruiterCreateJobAddSkillButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/canaidate_application_two_button_common_shape"
                    android:backgroundTint="#F4792DA8"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Skill"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Salary"
                android:textSize="17sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/tieRecruiterCreateNewJobSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_borders_only_shape"
                android:hint="Enter Salary..."
                android:inputType="number"
                android:padding="15dp"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Minimum Salary"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/tieRecruiterCreateNewJobMinimumSalary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/input_borders_only_shape"
                        android:hint="Enter Minimum Salary..."
                        android:inputType="number"
                        android:padding="15dp"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Maximum Salary"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/tieRecruiterCreateNewJobMaximumSalary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/input_borders_only_shape"
                        android:hint="Enter Maximum Salary..."
                        android:inputType="number"
                        android:padding="15dp"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Experience Level"
                android:textSize="16sp"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_borders_only_shape"
                android:hint="Select Experience Level"
                android:textColorHint="#5A5959"
                app:endIconTint="#5A5959"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/actRecruiterCreateNewJobExperienceLevel"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:textSize="15sp"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Education Required"
                android:textSize="16sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/tieRecruiterCreateNewJobEducationRequired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_borders_only_shape"
                android:hint="Enter Education..."
                android:inputType="text"
                android:padding="15dp"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acbRecruiterCreateJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/canaidate_application_two_button_common_shape"
                android:backgroundTint="@color/primary"
                android:text="Create"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>


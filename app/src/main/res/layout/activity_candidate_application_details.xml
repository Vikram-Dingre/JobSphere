<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Candidate.Activities.CandidateApplicationDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:paddingVertical="20dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/back_arrow"
            android:background="@drawable/candidate_job_details_skills_shape" />

        <TextView
            android:layout_width="0dp"
            android:width="0dp"
            android:layout_weight="79"
            android:layout_height="wrap_content"
            android:text="Applications"
            android:textSize="20sp"
            android:gravity="start"
            android:textStyle="bold"
            android:textColor="#A2000000" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="100"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="1.5dp"
                app:cardBackgroundColor="#F46A1B9A"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivCandidateApplicationsCompanyLogo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/image_shape"
                            android:backgroundTint="@color/bg"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/googleg_standard_color_18" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvCandidateApplicationsJobName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mobile Apps Designer"
                                    android:textColor="@color/white"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Company Name"
                                    android:textSize="14sp"
                                    android:textStyle="normal"
                                    android:textColor="@color/dadada" />


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="15dp"
                        android:background="@color/bg" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/acbCandidateApplicationsApplicationStatus"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_weight="50"
                        android:text="On the Way"
                        android:textAllCaps="false"
                        android:textColor="#D812DC18"
                        android:backgroundTint="#7943A047"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/canaidate_application_two_button_common_shape" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100"
                app:cardUseCompatPadding="true"
                app:cardElevation="1.5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="80"
                            android:layout_height="wrap_content"
                            android:text="Salary"
                            android:textSize="16sp"
                            android:textColor="#D4575757"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8 LPA"
                            android:textSize="13sp"
                            android:textStyle="normal"
                            android:textColor="@color/primary" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="80"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:textSize="16sp"
                            android:textColor="#D4575757"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Freelance"
                            android:textSize="13sp"
                            android:textStyle="normal"
                            android:textColor="@color/primary" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="80"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textSize="16sp"
                            android:textColor="#D4575757"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Singapore"
                            android:textSize="13sp"
                            android:textStyle="normal"
                            android:textColor="@color/primary" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="15dp"
                        android:background="@color/dadada" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Waiting for review..."
                        android:textSize="16sp"
                        android:paddingBottom="50dp"
                        android:textStyle="normal"
                        android:textColor="#CB3D3D3D" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waiting for review"
        android:background="@drawable/button_shape_with_bg_gradient"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp" />


</LinearLayout>